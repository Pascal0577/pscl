#!/bin/sh

package_name="acl"
package_version="2.3.2"
package_description="Utilities to administer Access Control Lists"
package_source="https://download.savannah.gnu.org/releases/acl/acl-2.3.2.tar.xz"

source_dir="$package_name-$package_version"

configure() {
    ./configure --prefix=/usr    \
            --disable-static \
            --docdir=/usr/share/doc/acl-2.3.2
}

build() {
    make
}

install_files() {
    make DESTDIR="$destdir" install
}
