#!/bin/sh

package_name="libpipeline"
package_version="1.5.8"
package_description="contains a library for manipulating pipelines of subprocesses in a flexible and convenient way"
package_source="https://download.savannah.gnu.org/releases/libpipeline/libpipeline-1.5.8.tar.gz"

source_dir="$package_name-$package_version"

configure() {
    ./configure --prefix=/usr
}

build() {
    make
}

install_files() {
    make DESTDIR="$destdir" install
}
