#!/bin/sh

package_name="sed"
package_version="4.9"
package_description="Contains a stream editor"
package_source="https://ftp.gnu.org/gnu/sed/sed-4.9.tar.xz"

source_dir="$package_name-$package_version"

configure() {
    ./configure --prefix=/usr
}

build() {
    make
    make html
}

install_files() {
    make DESTDIR="$destdir" install
    command install -d -m755           "$destdir"/usr/share/doc/sed-4.9
    command install -m644 doc/sed.html "$destdir"/usr/share/doc/sed-4.9
}
