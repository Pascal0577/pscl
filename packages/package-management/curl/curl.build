#!/bin/sh

package_name="curl"
package_version="8.16.0"
package_description=""
package_source="https://curl.se/download/curl-8.16.0.tar.xz"

source_dir="$package_name-$package_version"

configure() {
	./configure --prefix=/usr    \
		--disable-static \
		--with-openssl   \
		--with-ca-path=/etc/ssl/certs
}

build() {
    make
}

install_files() {
    make DESTDIR="$destdir" install
}
