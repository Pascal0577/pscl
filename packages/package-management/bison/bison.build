#!/bin/sh

package_name="bison"
package_version="3.8.2"
package_description="A parser generator"
package_source="https://ftp.gnu.org/gnu/bison/bison-3.8.2.tar.xz"

source_dir="$package_name-$package_version"

configure() {
    ./configure --prefix=/usr \
        --docdir=/usr/share/doc/bison-3.8.2
}

build() {
    make
}

install_files() {
    make DESTDIR="$destdir" install
}
