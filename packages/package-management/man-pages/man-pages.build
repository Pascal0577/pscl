#!/bin/sh

package_name="man-pages"
package_version="6.15"
package_description="Man pages for GNU/Linux systems"
package_source="https://www.kernel.org/pub/linux/docs/man-pages/man-pages-6.15.tar.xz"

source_dir="man-pages-6.15"

configure() {
    cd "$source_dir"
    rm  man3/crypt*
}

build() {
    :
}

install_files() {
    make -R GIT=false DESTDIR="$destdir" prefix=/usr install || log_error "Destdir is: $destdir"
}
