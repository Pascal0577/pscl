#!/bin/sh

package_name="grep"
package_version="3.12"
package_description="Programs for searching through the contents of files"
package_source="https://ftp.gnu.org/gnu/grep/grep-3.12.tar.xz"

source_dir="$package_name-$package_version"

configure() {
    sed -i "s/echo/#echo/" src/egrep.sh
    ./configure --prefix=/usr
}

build() {
    make
}

install_files() {
    make DESTDIR="$destdir" install
}
