#!/bin/sh

package_name="groff"
package_version="1.23.0"
package_description="programs for processing and formatting text and images"
package_source="https://ftp.gnu.org/gnu/groff/groff-1.23.0.tar.gz"

source_dir="$package_name-$package_version"

configure() {
    PAGE=letter ./configure --prefix=/usr
}

build() {
    make
}

install_files() {
    make DESTDIR="$destdir" install
}
