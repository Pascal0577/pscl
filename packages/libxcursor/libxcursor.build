#!/bin/sh

package_name="libxcursor"
package_version="1.2.3"
package_description="X.Org libxcursor library"
package_source="https://www.x.org/pub/individual/lib/libxcursor-1.2.3.tar.xz 5ce55e952ec2d84d9817169d5fdb7865"
package_dependencies="libx11 libxfixes libxrender xorgproto xorg-util-macros"

source_dir="$package_name-$package_version"

configure() {
    cd "$source_dir" || log_error "Failed to cd to $source_dir"
    ./configure --prefix=/usr \
        --sysconfdir=/etc \
        --localstatedir=/var \
        --disable-static \
        --docdir="/usr/share/doc/$package_name-$package_version"
}

build() {
    cd "$source_dir" || log_error "Failed to cd to $source_dir"
    make
}

install_files() {
    cd "$source_dir" || log_error "Failed to cd to $source_dir"
    make DESTDIR="$DESTDIR" install
}
