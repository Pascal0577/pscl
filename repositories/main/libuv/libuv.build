#!/bin/sh

package_name="libuv"
package_version="1.51.0"
package_description=""
package_source="https://dist.libuv.org/dist/v1.51.0/libuv-v1.51.0.tar.gz 5e0109e19c3fed3a8cbecb958de39afa"

source_dir="$package_name-v$package_version"

configure() {
    cd "$source_dir" || log_error "In $package_name.build: Failed to cd to $source_dir"
	sh autogen.sh
	./configure --prefix=/usr --disable-static
}

build() {
    make
}

install_files() {
    make install
}
