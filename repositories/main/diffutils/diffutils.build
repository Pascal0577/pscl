#!/bin/sh

package_name="diffutils"
package_version="3.12"
package_description="Programs that show the differences between files or directories"
package_source="https://ftpmirror.gnu.org/diffutils/diffutils-3.12.tar.xz d1b18b20868fb561f77861cd90b05de4"

source_dir="$package_name-$package_version"

configure() {
    cd "$source_dir" || log_error "In $package_name.build: Failed to cd to $source_dir"
    ./configure --prefix=/usr
}

build() {
    make
}

install_files() {
    make install
}
