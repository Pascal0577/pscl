#!/bin/sh

package_name="bison"
package_version="3.8.2"
package_description="A parser generator"
package_source="https://ftpmirror.gnu.org/bison/bison-3.8.2.tar.xz c28f119f405a2304ff0a7ccdcc629713"

source_dir="$package_name-$package_version"

configure() {
    cd "$source_dir" || log_error "In $package_name.build: Failed to cd to $source_dir"
    ./configure --prefix=/usr \
        --docdir=/usr/share/doc/bison-3.8.2
}

build() {
    make
}

install_files() {
    make install
}
