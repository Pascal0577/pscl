#!/bin/sh

package_name="zstd"
package_version="1.5.7"
package_description="Zstd compression library"
package_source="https://github.com/facebook/zstd/releases/download/v1.5.7/zstd-1.5.7.tar.gz 780fc1896922b1bc52a4e90980cdda48"

source_dir="$package_name-$package_version"

configure() {
    cd "$source_dir" || log_error "In $package_name.build: Failed to cd to $source_dir"
}

build() {
    make prefix=/usr
}

install_files() {
    make prefix=/usr install
    rm  "$DESTDIR/usr/lib/libzstd.a"
}
