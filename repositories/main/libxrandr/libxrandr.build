#!/bin/sh

package_name="libxrandr"
package_version="1.5.4"
package_description="X.Org libxrandr library"
package_source="https://www.x.org/pub/individual/lib/libXrandr-1.5.4.tar.xz 24e0b72abe16efce9bf10579beaffc27"
pkg_deps="libx11 libxext libxrender xorgproto xorg-util-macros"

source_dir="libXrandr-$package_version"

configure() {
    cd "$source_dir" || log_error "Failed to cd to $source_dir"
    ./configure --prefix=/usr \
        --sysconfdir=/etc \
        --localstatedir=/var \
        --disable-static \
        --docdir="/usr/share/doc/$package_name-$package_version"
}

build() {
    make
}

install_files() {
    make DESTDIR="$DESTDIR" install
}
