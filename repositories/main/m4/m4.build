#!/bin/sh

package_name="m4"
package_version="1.4.20"
package_description="Macro processor"
package_source="https://ftpmirror.gnu.org/m4/m4-1.4.20.tar.xz 6eb2ebed5b24e74b6e890919331d2132"

source_dir="$package_name-$package_version"

configure() {
    cd "$source_dir" || log_error "In $package_name.build: Failed to cd to $source_dir"
    ./configure --prefix=/usr   \
        --build="$(build-aux/config.guess)"
}

build() {
    make
}

install_files() {
    make install
}
