#!/bin/sh
# shellcheck disable=SC2034

package_name="xorg-xcursorgen"
package_version="1.0.8"
package_description=""
package_source="https://www.x.org/archive/individual/app/xcursorgen-1.0.8.tar.xz 89e81a1c31e4a1fbd0e431425cd733d7"

pkg_deps="libpng libx11 libxcursor"
opt_deps=""
build_deps="xorg-util-macros"
check_deps=""

source_dir="xcursorgen-$package_version"

configure() {
    cd "$source_dir" || log_error "Failed to cd: $source_dir"
    ./configure --prefix=/usr \
        --sysconfdir=/etc \
        --localstatedir=/var \
        --disable-static
}

build() {
    make
}

install_files() {
    make install
}
