#!/bin/sh

package_name="gzip"
package_version="1.14"
package_description="Programs for compressing and decompressing files"
package_source="https://ftp.gnu.org/gnu/gzip/gzip-1.14.tar.xz 4bf5a10f287501ee8e8ebe00ef62b2c2"

source_dir="$package_name-$package_version"

configure() {
    cd "$source_dir" || log_error "In $package_name.build: Failed to cd to $source_dir"
    ./configure --prefix=/usr
}

build() {
    make
}

install_files() {
    make install
}
