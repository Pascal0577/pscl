#!/bin/sh
# shellcheck disable=SC2034

package_name="efivar"
package_version="39"
package_description=""
package_source="https://github.com/rhboot/efivar/archive/39/efivar-39.tar.gz a8fc3e79336cd6e738ab44f9bc96a5aa"

source_dir="$package_name-$package_version"

configure() {
    cd "$source_dir" || log_error "In $package_name.build: Failed to cd to $source_dir"
    :
}

build() {
    make ENABLE_DOCS=0
}

install_files() {
    make ENABLE_DOCS=0 LIBDIR=/usr/lib install
}
