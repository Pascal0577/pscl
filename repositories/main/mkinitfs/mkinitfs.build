#!/bin/sh

package_name="mkinitfs"
package_version="3.12.0"
package_description="Initramfs generator from Alpine Linux"
package_source="https://github.com/alpinelinux/mkinitfs/archive/refs/tags/3.12.0.tar.gz d41d8cd98f00b204e9800998ecf8427e"

source_dir="$package_name-$package_version"

configure() {
    cd "$source_dir" || log_error "In $package_name.build: Failed to cd to $source_dir"
    :
}

build() {
    make
}

install_files() {
    make install
}
