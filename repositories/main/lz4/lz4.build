#!/bin/sh

package_name="lz4"
package_version="1.10.0"
package_description="A speedy compression and decompression algorithm"
package_source="https://github.com/lz4/lz4/releases/download/v1.10.0/lz4-1.10.0.tar.gz d41d8cd98f00b204e9800998ecf8427e"

source_dir="$package_name-$package_version"

configure() {
    cd "$source_dir" || log_error "In $package_name.build: Failed to cd to $source_dir"
    :
}

build() {
    make BUILD_STATIC=no PREFIX=/usr
}

install_files() {
    make BUILD_STATIC=no DESTDIR="$DESTDIR" install
}
