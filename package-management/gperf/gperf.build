#!/bin/sh

package_name="gperf"
package_version="3.3"
package_description="Generates a perfect hash function from a key set"
package_source="https://ftp.gnu.org/gnu/gperf/gperf-3.3.tar.gz"

source_dir="$package_name-$package_version"

configure() {
    ./configure --prefix=/usr --docdir=/usr/share/doc/gperf-3.3
}

build() {
    make
}

install_files() {
    make DESTDIR="$destdir" install
}
