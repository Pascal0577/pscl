#!/bin/sh

package_name="vim"
package_version="9.1.1629"
package_description="vim text editor"
package_source="https://github.com/vim/vim/archive/v9.1.1629/vim-9.1.1629.tar.gz"

source_dir="$package_name-$package_version"

configure() {
    echo '#define SYS_VIMRC_FILE "/etc/vimrc"' >> src/feature.h
    ./configure --prefix=/usr
}

build() {
    make
}

install_files() {
    make DESTDIR="$destdir" install
}
