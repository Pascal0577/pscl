#!/bin/sh

package_name="patch"
package_version="2.8"
package_description="A program for modifying or creating files by applying a “patch” file typically created by the diff program"
package_source="https://ftp.gnu.org/gnu/patch/patch-2.8.tar.xz"

source_dir="$package_name-$package_version"

configure() {
    ./configure --prefix=/usr
}

build() {
    make
}

install_files() {
    make DESTDIR="$destdir" install
}
