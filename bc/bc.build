#!/bin/sh

package_name="bc"
package_version="7.0.3"
package_description="An arbitrary precision numeric processing language"
package_source="https://github.com/gavinhoward/bc/releases/download/7.0.3/bc-7.0.3.tar.xz"

source_dir="$package_name-$package_version"

configure() {
    CC='gcc -std=c99' ./configure --prefix=/usr -G -O3 -r
}

build() {
    make
}

install_files() {
    make DESTDIR="$destdir" install
}
