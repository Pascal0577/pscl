#!/bin/sh

package_name="zstd"
package_version="1.5.7"
package_description="Zstd compression library"
package_source="https://github.com/facebook/zstd/releases/download/v1.5.7/zstd-1.5.7.tar.gz"

source_dir="$package_name-$package_version"

configure() { :; }

build() {
    make prefix=/usr
}

install_files() {
    make DESTDIR="$destdir" prefix=/usr install
    rm  "$destdir/usr/lib/libzstd.a"
}
