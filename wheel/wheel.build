#!/bin/sh

package_name="wheel"
package_version="0.46.1"
package_description="a Python library that is the reference implementation of the Python wheel packaging standard"
package_source="https://pypi.org/packages/source/w/wheel/wheel-0.46.1.tar.gz"

source_dir="$package_name-$package_version"

configure() {
    :
}

build() {
    pip3 wheel -w dist --no-cache-dir --no-build-isolation --no-deps $PWD
}

install_files() {
    pip3 install --no-index --find-links dist --root "$destdir" wheel
}
