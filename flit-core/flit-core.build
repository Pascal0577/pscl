#!/bin/sh

package_name="flit-core"
package_version="3.12.0"
package_description="The distribution-building parts of Flit"
package_source="https://pypi.org/packages/source/f/flit-core/flit_core-3.12.0.tar.gz"

source_dir="flit_core-$package_version"

configure() {
    :
}

build() {
    pip3 wheel -w dist --no-cache-dir --no-build-isolation --no-deps $PWD
}

install_files() {
    pip3 install --no-index --find-links dist --root "$destdir" flit_core
}
