#!/bin/sh

package_name="gdbm"
package_version="1.26"
package_description="The GNU Database Manager"
package_source="https://ftp.gnu.org/gnu/gdbm/gdbm-1.26.tar.gz"

source_dir="$package_name-$package_version"

configure() {
    ./configure --prefix=/usr    \
        --disable-static \
        --enable-libgdbm-compat
}

build() {
    make
}

install_files() {
    make DESTDIR="$destdir" install
}
